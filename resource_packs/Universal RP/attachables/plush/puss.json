{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "universal:plush_puss",
            "materials": {
                "default": "entity_alphatest"
            },
            "textures": {
                "default": "textures/entity/plush/puss"
            },
            "geometry": {
                "default": "geometry.universal.plush.puss"
            },
            "animations": {
                "first_person": "animation.universal.plush.first.puss",
                "third_person": "animation.universal.plush.third"
            },
            "scripts": {
                "animate": [
                    {
                        "first_person": "context.is_first_person == 1.0"
                    },
                    {
                        "third_person": "context.is_first_person == 0.0"
                    }
                ]
            },
            "render_controllers": ["controller.render.default"]
        }
    }
}
