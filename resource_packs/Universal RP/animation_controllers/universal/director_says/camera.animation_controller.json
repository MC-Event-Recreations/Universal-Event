{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.universal.director_says.camera": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "active": "query.main_hand_item_use_duration > 0"
                        }
                    ]
                },
                "active": {
                    "animations": ["use"],
                    "transitions": [
                        {
                            "default": "query.main_hand_item_use_duration <= 0"
                        }
                    ]
                }
            }
        }
    }
}